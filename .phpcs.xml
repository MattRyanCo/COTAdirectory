<?xml version="1.0"?>
<ruleset name="WordPress-Like">
  <description>WordPress-style formatting, relaxed on tab/space issues</description>
  
  <rule ref="WordPress-Core" />

  <!-- Ignore tab vs space issues -->
  <exclude name="Squiz.WhiteSpace.TabIndent" />
  <exclude name="Squiz.WhiteSpace.SuperfluousWhitespace" />
  <exclude name="Generic.WhiteSpace.DisallowTabIndent" />
  <exclude name="Generic.WhiteSpace.DisallowSpaceIndent.SpacesUsed" />

  <!-- Disable WP-specific sniffs -->
  <exclude name="WordPress.NamingConventions.ValidVariableName.VariableNotSnakeCase" />
  <exclude name="WordPress.Security.EscapeOutput.OutputNotEscaped" />
  <exclude name="WordPress.WP.GlobalVariablesOverride.Prohibited" />
  
  <!-- Optional: also ignore trailing spaces if desired -->
  <exclude name="Squiz.WhiteSpace.SemicolonSpacing" />
  <exclude name="Squiz.WhiteSpace.ScopeClosingBrace" />
</ruleset>
